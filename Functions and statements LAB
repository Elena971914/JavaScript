04. Orders

function calculateOrderPrice(product, quantity) {
    let products = {
        'coffee': 1.50,
        'water': 1.00,
        'coke': 1.40,
        'snacks': 2.00
    }
    console.log((products[product] * quantity).toFixed(2))
}

calculateOrderPrice('water', 5)


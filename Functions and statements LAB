06. Sign Check

function checkSign(num1, num2, num3) {
    let minuses = 0;
    for (let num of [num1,num2,num3]) {
        if (num < 0) {
            minuses += 1
        }
    }
    if (minuses === 1 || minuses === 3) {
        console.log('Negative')
    } else {console.log('Positive')}
}
